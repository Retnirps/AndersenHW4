<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.majestadev.andersenhw4.AnalogClockView
        android:id="@+id/analogClockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circleColor="#AAAAAA"
        app:circleStrokeWidth="20"
        app:hourHandColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:minuteHandColor="@color/white"
        app:numeralSpacing="100"
        app:numeralsFontSize="25"
        app:secondHandWidth="5"
        app:otherHandsWidth="10"
        app:numeralsFontWidth="10"
        app:secondHandColor="#FF0000" />

</androidx.constraintlayout.widget.ConstraintLayout>